{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./", // üëà CHANGE 1: Use the current directory as the root
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
  },
  // ‚ùå REMOVE THIS BLOCK
  // The 'ts-node' options should be in package.json or command line.
  // "ts-node": {
  //   "esm": true,
  //   "experimentalSpecifierResolution": "node"
  // },
  "include": ["**/*.ts"], // üëà CHANGE 2: Include all TypeScript files
  "exclude": ["node_modules"]
}